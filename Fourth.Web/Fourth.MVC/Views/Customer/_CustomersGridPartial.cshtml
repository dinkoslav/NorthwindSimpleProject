@using Fourth.Services.ViewModels.Models

@model IList<CustomerGridModel>

<div class="panel panel-default">
    <div class="panel-heading">Customers</div>
    <div class="panel-body">
        @if (Model.Count > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">@Html.LabelFor(m => m[0].Name)</th>
                        <th scope="col">@Html.LabelFor(m => m[0].OrdersCount)</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (CustomerGridModel customer in Model)
                {
                        @Html.Partial("~/Views/Customer/_CustomersGridRowPartial.cshtml", customer)
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>
                No customers found!
            </p>
        }
    </div>
</div>

